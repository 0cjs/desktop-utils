#!/bin/bash

err() { echo 1>&2 "$(basename $0):" "$@"; exit 1; }

bldir=/sys/class/backlight/*/
cd $bldir || err "Cannot cd to $bldir"

max=$(cat max_brightness)
cur=$(cat brightness)
new=${1:-$(($max*3/4))}

if [ _"$new" = _- ]; then
    echo "$(basename $0): $cur (max $max)"
else
    echo "$(basename $0): $cur -> $new (max $max)"
    sudo bash -c "echo '$new' > brightness"
fi
